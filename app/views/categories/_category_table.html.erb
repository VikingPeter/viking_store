<% @categories.each do |category| %>
  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td><%= link_to "Show", category_path(category.id) %></td>
    <td><%= link_to "Edit", edit_category_path(category) %></td>
    <td><%= link_to "Remove", category, method: :delete, data: { confirm: "Are you sure?" } %></td>
  </tr>
<% end %>